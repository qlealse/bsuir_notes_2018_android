        <item name="colorAccent">@color/materialAmberA400</item>
        <item name="colorNoteCard">@color/materialTeal50</item>
        <item name="colorNoteTitleText">@color/textColor</item>
        <item name="colorNoteTimeText">@color/textColor</item>
        <item name="colorReminderON">@color/materialAmberA400</item>
        <item name="colorPinnedNote">@color/materialLightBlueA400</item>
